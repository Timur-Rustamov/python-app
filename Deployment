apiVersion: v1
kind: Namespace
metadata:
  name: python-app
---
apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: pythonapp
    owner: TumurRustamov
  name: pythonapp
  namespace: python-app
spec:
  replicas: 3
  selector:
    matchLabels:
      app: pythonapp
  strategy:
    rollingUpdate:
      maxSurge: 2
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: pythonapp
    spec:
      containers:
      - image: tr94/app:<tag>
        name: appimage
        ports:
          - containerPort: 8080
        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe: 
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 5
        resources: 
          requests:
            memory: "128Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
---
apiVersion: v1
kind: Service
metadata:
  labels:
    app: pythonapp
    owner: TumurRustamov
  name: pythonappnodeportservice
  namespace: python-app
spec:
  type: ClusterIP
  selector:
    app: pythonapp
  ports:
   - name: pythonappnodeportservice
     port: 8080
     protocol: TCP
