apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: pythonapp
    env: WeeklyAsessment
    owner: TumurRustamov
  name: pythonapp
spec:
  replicas: 3
  selector:
    matchLabels:
      app: pythonapp
  strategy:
    rollingUpdate:
      maxSurge: 2
      maxUnavailable: 1
    type: RollingUpdate
  template:
    metadata:
      creationTimestamp: null
      labels:
        app: pythonapp
    spec:
      containers:
      - image: tr94/appimage:smallest
        name: appimage
        ports:
          - containerPort: 8080
        livenessProbe:
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 30
          periodSeconds: 10
        readinessProbe: 
          httpGet:
            path: /health
            port: 8080
          initialDelaySeconds: 10
          periodSeconds: 5
        resources: 
          requests:
            memory: "128Mi"
            cpu: "250m"
          limits:
            memory: "512Mi"
            cpu: "500m"
